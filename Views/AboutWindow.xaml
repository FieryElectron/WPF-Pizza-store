<Window x:Class="PizzaStore.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaStore.Views"
        xmlns:Resx="clr-namespace:PizzaStore.Properties"
        mc:Ignorable="d"
        ResizeMode ="NoResize"
        Title="{x:Static Resx:Resources.AppName}"
        Height="200" Width="500">
    <Grid>
        <TextBlock
            Text="{x:Static Resx:Resources.IntroductionText}"
            FontSize="20" 
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
        <!--Text="This App is made for&#13;creating Ingredients and Pizzas&#13;Handling Pizza Orders from Customers!"-->
    </Grid>
</Window>
